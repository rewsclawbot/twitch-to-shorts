# Required: Twitch API credentials
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=

# Optional: Deepgram API key for captions
DEEPGRAM_API_KEY=

# Optional: title optimizer feature flag
TITLE_OPTIMIZER_ENABLED=false

# Optional: OpenAI key for title optimization (default model: gpt-4o-mini)
OPENAI_API_KEY=

# Optional: Local OpenAI-compatible LLM endpoint override
LLM_BASE_URL=http://localhost:1234/v1
LLM_MODEL_NAME=qwen2.5-coder

# Optional: set to 1/true/yes to force CPU encoding
DISABLE_GPU_ENCODE=
