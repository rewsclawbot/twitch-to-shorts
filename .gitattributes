# Auto detect text files and perform LF normalization
* text=auto

# Source code - force LF
*.py text eol=lf
*.sh text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.cfg text eol=lf
*.ini text eol=lf
*.toml text eol=lf

# Windows-specific - force CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.mp4 binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.db binary
*.sqlite binary
*.sqlite3 binary
